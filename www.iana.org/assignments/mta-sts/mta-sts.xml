<registry xmlns="http://www.iana.org/assignments" id="mta-sts">
  <title>SMTP MTA Strict Transport Security (MTA-STS)</title>
  <created>2018-06-21</created>
  <updated>2018-09-28</updated>

  <registry id="mta-sts-txt-record-fields">
    <title>MTA-STS TXT Record Fields</title>
    <xref type="rfc" data="rfc8461"/>
    <registration_rule>Expert Review</registration_rule>
    <expert>Unassigned</expert>
    <record date="2018-06-21">
      <value>v</value>
      <description>Record version</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.1</xref>
    </record>
    <record date="2018-06-21">
      <value>id</value>
      <description>Policy instance ID</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.1</xref>
    </record>
  </registry>
  
  <registry id="mta-sts-policy-fields">
    <title>MTA-STS Policy Fields</title>
    <xref type="rfc" data="rfc8461"/>
    <registration_rule>Expert Review</registration_rule>
    <expert>Unassigned</expert>
    <record date="2018-06-21">
      <value>version</value>
      <description>Policy version</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.2</xref>
    </record>
    <record date="2018-06-21">
      <value>mode</value>
      <description>Enforcement behavior</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.2</xref>
    </record>
    <record date="2018-06-21">
      <value>max_age</value>
      <description>Policy lifetime</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.2</xref>
    </record>
    <record date="2018-06-21">
      <value>mx</value>
      <description>MX identities</description>
      <xref type="rfc" data="rfc8461">RFC8461, Section 3.2</xref>
    </record>
  </registry>

  <people/>
</registry>
